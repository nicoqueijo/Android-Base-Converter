<resources>
    <!-- Base application theme. -->
    <style name="AppThemePurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPurplePrimary</item>
        <item name="colorPrimaryDark">@color/colorPurplePrimaryDark</item>
        <item name="colorAccent">@color/colorPurpleAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="AppThemePink" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPinkPrimary</item>
        <item name="colorPrimaryDark">@color/colorPinkPrimaryDark</item>
        <item name="colorAccent">@color/colorPinkAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="AppThemeIndigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorIndigoPrimary</item>
        <item name="colorPrimaryDark">@color/colorIndigoPrimaryDark</item>
        <item name="colorAccent">@color/colorIndigoAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="AppThemeTeal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorTealPrimary</item>
        <item name="colorPrimaryDark">@color/colorTealPrimaryDark</item>
        <item name="colorAccent">@color/colorTealAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorOrangePrimary</item>
        <item name="colorPrimaryDark">@color/colorOrangePrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeAccent</item>
        <item name="android:actionMenuTextColor">@color/colorDarkGray</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextLabelStyle.Portrait">
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TextLabelStyle.Landscape">
        <item name="android:layout_marginLeft">17dp</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:max">14</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:progress">1</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
    </style>

    <style name="SeekBarStyleStaticTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:max">14</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:progress">1</item>
        <item name="android:thumb">@drawable/custom_thumb_static_theme</item>
    </style>

    <style name="BaseLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/base</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="BaseNumberLabelStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputOutputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21dp</item>
    </style>

    <style name="ButtonRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="ButtonRowStyle.Portrait">
        <item name="android:weightSum">5</item>
    </style>

    <style name="ButtonRowStyle.Landscape">
        <item name="android:weightSum">3</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ButtonStyleStaticTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/custom_button_static_theme</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LanguageTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:text">@string/language</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LanguageScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="LanguageChoiceStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="LanguageRadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="LanguageFlagStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/round_outline</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="LanguageItemLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ThemeTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="ThemeRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ThemeOptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeCheckMarkStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
