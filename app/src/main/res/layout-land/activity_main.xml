<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:context="com.nicoqueijo.android.baseconverter.MainActivity">

    <LinearLayout
        android:id="@+id/container_converter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/container_labels"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/from_label"
                style="@style/TextLabelStyleLandscape"
                android:text="@string/from"/>

            <TextView
                android:id="@+id/input_label"
                style="@style/TextLabelStyleLandscape"
                android:text="@string/input"/>

            <TextView
                android:id="@+id/to_label"
                style="@style/TextLabelStyleLandscape"
                android:text="@string/to"/>

            <TextView
                android:id="@+id/output_label"
                style="@style/TextLabelStyleLandscape"
                android:text="@string/output"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_controls"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/seekbar_from_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/base_array_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/from_base_label_2"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_2"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_3"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_3"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_4"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_4"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_5"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_5"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_6"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_6"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_7"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_7"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_8"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_8"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_9"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_9"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_10"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_10"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/from_base_label_11"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_11"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_12"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_12"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_13"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_13"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_14"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_14"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_15"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_15"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/from_base_label_16"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_16"
                        android:visibility="invisible"/>

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_from_controller"
                    style="@style/SeekBarStyle"/>

                <TextView
                    android:id="@+id/base_label_from"
                    style="@style/BaseLabelStyle"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_value_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/input_value"
                    style="@style/InputOutputStyle"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/seekbar_to_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/base_array_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/to_base_label_2"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_2"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/to_base_label_3"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_3"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_4"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_4"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_5"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_5"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_6"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_6"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_7"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_7"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_8"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_8"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_9"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_9"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_10"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_10"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_11"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_11"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_12"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_12"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_13"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_13"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_14"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_14"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_15"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_15"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/to_base_label_16"
                        style="@style/BaseNumberLabelStyle"
                        android:text="@string/label_16"
                        android:visibility="invisible"/>

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_to_controller"
                    style="@style/SeekBarStyle"/>

                <TextView
                    android:id="@+id/base_label_to"
                    style="@style/BaseLabelStyle"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/output_value_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/output_value"
                    style="@style/InputOutputStyle"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="5">

        <LinearLayout
            android:id="@+id/buttons_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <!-- First Row -->
            <LinearLayout
                android:id="@+id/buttons_first_row"
                style="@style/ButtonRowStyle">

                <Button
                    android:id="@+id/button_1"
                    style="@style/ButtonStyle"
                    android:text="@string/button_1"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_2"
                    style="@style/ButtonStyle"
                    android:text="@string/button_2"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_3"
                    style="@style/ButtonStyle"
                    android:text="@string/button_3"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_A"
                    style="@style/ButtonStyle"
                    android:text="@string/button_A"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_B"
                    style="@style/ButtonStyle"
                    android:text="@string/button_B"
                    android:visibility="invisible"/>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:id="@+id/buttons_second_row"
                style="@style/ButtonRowStyle">

                <Button
                    android:id="@+id/button_4"
                    style="@style/ButtonStyle"
                    android:text="@string/button_4"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_5"
                    style="@style/ButtonStyle"
                    android:text="@string/button_5"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_6"
                    style="@style/ButtonStyle"
                    android:text="@string/button_6"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_C"
                    style="@style/ButtonStyle"
                    android:text="@string/button_C"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_D"
                    style="@style/ButtonStyle"
                    android:text="@string/button_D"
                    android:visibility="invisible"/>

            </LinearLayout>

            <!-- Third Row -->
            <LinearLayout
                android:id="@+id/buttons_third_row"
                style="@style/ButtonRowStyle">

                <Button
                    android:id="@+id/button_7"
                    style="@style/ButtonStyle"
                    android:text="@string/button_7"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_8"
                    style="@style/ButtonStyle"
                    android:text="@string/button_8"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_9"
                    style="@style/ButtonStyle"
                    android:text="@string/button_9"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_E"
                    style="@style/ButtonStyle"
                    android:text="@string/button_E"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_F"
                    style="@style/ButtonStyle"
                    android:text="@string/button_F"
                    android:visibility="invisible"/>

            </LinearLayout>

            <!-- Fourth Row -->
            <LinearLayout
                android:id="@+id/buttons_fourth_row"
                style="@style/ButtonRowStyle">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_0"
                    style="@style/ButtonStyle"
                    android:text="@string/button_0"
                    android:visibility="visible"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_clr"
                    style="@style/ButtonStyle"
                    android:text="@string/button_clr"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/button_del"
                    style="@style/ButtonStyle"
                    android:text="@string/button_del"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>